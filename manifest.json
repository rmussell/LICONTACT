{
  "manifest_version": 3,
  "name": "LinkedIn Grabber",
  "version": "1.0",
  "description": "Extracts LinkedIn profiles and checks or creates them in HubSpot.",
  "permissions": [
    "activeTab",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.hubapi.com/*",
	"https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "LICONTACT.png",
      "48": "LICONTACT.png",
      "128": "LICONTACT.png"
    }
  },
  "icons": {
    "16": "LICONTACT.png",
    "48": "LICONTACT.png",
    "128": "LICONTACT.png"
  }
}
