{
  "manifest_version": 3,
  "name": "LICONTACT",
  "version": "1.0",
  "description": "Extract LinkedIn profiles and check or create them in HubSpot.",
  "permissions": [
    "activeTab",
    "storage",
	"scripting"
  ],
  "host_permissions": [
    "https://api.hubapi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "LICONTACT.png",
      "48": "LICONTACT.png",
      "128": "LICONTACT.png"
    }
  },
  "icons": {
    "16": "LICONTACT.png",
    "48": "LICONTACT.png",
    "128": "LICONTACT.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "content.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
